{
  "rootDir": "src/",
  "verbose": true,
  "automock": false,
  "testEnvironment": "jsdom",
  "setupFiles": ["<rootDir>/setupTest.ts"],
  "globals": {
    "__DEV__": false
  },
  "transform": {
    "^.+\\.(t|j)sx?$": "@swc/jest"
  },
  "collectCoverageFrom": ["**/*.{ts,tsx}"],
  "coverageDirectory": "../__coverage__",
  "reporters": ["default", "jest-junit"]
}
